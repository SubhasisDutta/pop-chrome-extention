{
  "manifest_version": 3,
  "name": "POP - Personal Organization Platform",
  "version": "1.0.0",
  "description": "A collection of productivity bubbles to organize your digital life with GTD, Deep Work, and mindful productivity principles.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "alarms",
    "bookmarks",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "POP - Personal Organization Platform"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "cognitive-offload": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "MacCtrl+C"
      },
      "description": "Quick capture a thought (Cognitive Offload)"
    },
    "time-log": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "MacCtrl+T"
      },
      "description": "Log current site (Truth Logger)"
    },
    "daily-plan": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "MacCtrl+D"
      },
      "description": "Open daily negotiator"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "MacCtrl+P"
      },
      "description": "Open POP Dashboard"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "assets/*",
        "css/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}